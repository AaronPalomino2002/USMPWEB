<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - USMPWEB</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://cdn.lineicons.com/4.0/lineicons.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/USMPWEB.styles.css" asp-append-version="true" />
    <link rel="shortcut icon" href="~/ico/favicon_USMP.png" asp-append-version="true" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm nav-bar-bgprimary border-bottom box-shadow">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img alt="USMP FIA" class="img-fluid img-logo-header" src="~/images/logo-header.png">
                </a>
                <div>
                    <p class="font-p mb-0">Universidad San Martin de Porres</p>
                    <span class="font-span">@ViewData["CurrentDateTime"]</span>
                </div>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon">✕</span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end center-items-responsive"
                    id="navbarNav">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <div class="perfil-div">
                            <div class="img">
                                <img style="height: 40px;" src="~/images/personas/1.png" alt="Usuario">
                            </div>
                            <div class="parrafo">
                                <p class="mt-0 mb-0">@User.Identity.Name</p> <!-- Nombre del usuario -->
                            </div>
                            <div class="dropdown-container">
                                <button id="dropdown-btn" class="dropdown-btn">
                                    <i class="lni lni-chevron-down"></i>
                                </button>
                                <div id="dropdown-content" class="dropdown-content">
                                    <a asp-controller="Login" asp-action="Logout">Cerrar sesión</a>
                                    <!-- Cierre de sesión -->
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div>
                            <a asp-controller="Login" asp-action="Index">
                                <button class="btnlog">Iniciar Sesión</button>
                            </a>
                            <a asp-controller="Login" asp-action="Register">
                                <button class="btnlog">Registrate</button>
                            </a>
                        </div>
                    }

                    <div class="lista-funciones d-none d-sm-block d-md-block d-lg-block d-xl-block">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a asp-area="" asp-controller="Home" asp-action="Index"
                                    class="sidebar-link d-flex align-items-center">
                                    <div class="img-container">
                                        <img alt="USMP FIA" class="img-fluid img-logo-usmp"
                                            src="~/images/home-icon.svg">
                                    </div>
                                    <span>Campañas</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-area="" asp-controller="Inscripciones" asp-action="Index"
                                    class="sidebar-link d-flex align-items-center">
                                    <div class="img-container">
                                        <img alt="USMP FIA" class="img-fluid img-logo-usmp"
                                            src="~/images/calendario-icon.svg">
                                    </div>
                                    <span>Inscripciones</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-area="" asp-controller="Certificados" asp-action="Index"
                                    class="sidebar-link d-flex align-items-center">
                                    <div class="img-container">
                                        <img alt="USMP FIA" class="img-fluid img-logo-usmp"
                                            src="~/images/certificate-icon.svg">
                                    </div>
                                    <span>Certificados</span>
                                </a>
                            </li>
                        </ul>
                    </div>

                </div>
            </div>

        </nav>
    </header>

    <div class="wrapper">
        <aside id="sidebar">
            <div class="d-flex">
                <button id="toggle-btn" type="button">
                    <i class="lni lni-menu"></i>
                </button>
            </div>
            <ul class="sidebar-nav">
                <li class="sidebar-item active">
                    <a asp-area="" asp-controller="Home" asp-action="Index" class="sidebar-link">
                        <div class="round-border bg-redusmp">
                            <img alt="USMP FIA" class="img-fluid img-logo-usmp" src="~/images/home-icon.svg">
                        </div>
                        <span>Campañas</span>
                    </a>
                </li>
                <li class="sidebar-item">
                    <a asp-area="" asp-controller="Inscripciones" asp-action="Index" class="sidebar-link">
                        <div class="round-border bg-redusmp">
                            <img alt="USMP FIA" class="img-fluid img-logo-usmp" src="~/images/calendario-icon.svg">
                        </div>
                        <span>Inscripciones</span>
                    </a>
                </li>
                <li class="sidebar-item">
                    <a asp-area="" asp-controller="Certificados" asp-action="Index" class="sidebar-link">
                        <div class="round-border bg-redusmp">
                            <img alt="USMP FIA" class="img-fluid img-logo-usmp" src="~/images/certificate-icon.svg">
                        </div>
                        <span>Certificados</span>
                    </a>
                </li>
                @* <li class="sidebar-item">
